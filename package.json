  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@types/node": "^20.10.6",
    "allure-playwright": "^2.12.2"
  },
  "dependencies": {
    "msnodesqlv8": "^4.1.2",
    "mssql": "^10.0.2",
    "mysql": "^2.18.1",
    "pdf-parse": "^1.1.1",
    "xlsx": "^0.18.5"
  }
